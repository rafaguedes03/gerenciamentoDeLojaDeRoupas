<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.loja.amor_de_mamae.controller.MainController">
   <children>
      <!-- Sidebar com gradiente -->
      <VBox prefHeight="720.0" prefWidth="300.0" style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2);">
         <children>
            <!-- Cabeçalho sidebar -->
            <Pane prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: rgba(0,0,0,0.1);">
               <children>
                  <Text fill="WHITE" layoutX="30.0" layoutY="90.0" strokeType="OUTSIDE" strokeWidth="0.0" text="AMOR DE MAMÃE">
                     <font>
                        <Font name="System Bold" size="26.0" />
                     </font>
                  </Text>
                  <Text fill="rgba(255,255,255,0.8)" layoutX="30.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sistema de Gerenciamento">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
               </children>
            </Pane>

            <!-- Menu de botões -->
            <VBox alignment="TOP_CENTER" prefHeight="570.0" prefWidth="300.0" spacing="15.0" style="-fx-padding: 30 20 20 20;">
               <children>
                  <Button fx:id="btnVendas" mnemonicParsing="false" onAction="#abrirVendas" prefHeight="60.0" prefWidth="260.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/money.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <text>VENDAS</text>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>

                  <Button fx:id="btnProdutos" mnemonicParsing="false" onAction="#abrirCadastrarProduto" prefHeight="60.0" prefWidth="260.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/camiseta.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <text>PRODUTOS</text>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>

                  <Button fx:id="btnClientes" mnemonicParsing="false" onAction="#abrirCadastrarCliente" prefHeight="60.0" prefWidth="260.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/user.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <text>CLIENTES</text>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>

                  <Button fx:id="btnFiados" mnemonicParsing="false" onAction="#abrirFiados" prefHeight="60.0" prefWidth="260.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/eyes.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <text>FIADOS</text>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>

                  <Button fx:id="btnRelatorios" mnemonicParsing="false" onAction="#abrirRelatorios" prefHeight="60.0" prefWidth="260.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/report.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <text>RELATÓRIOS</text>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>

                  <Button fx:id="btnSair" mnemonicParsing="false" onAction="#logout" prefHeight="60.0" prefWidth="260.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 10; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(231,76,60,0.3), 10, 0, 0, 2);">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/logout.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <text>SAIR</text>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>

      <!-- Área de conteúdo -->
      <Pane fx:id="paneConteudo" layoutX="300.0" layoutY="0.0" prefHeight="720.0" prefWidth="980.0" style="-fx-background-color: #f8f9fa;">
         <!-- Header da área de conteúdo -->
         <Rectangle arcHeight="0.0" arcWidth="0.0" fill="WHITE" height="70.0" width="980.0">
            <effect>
                <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.1)" height="3" radius="5" width="0" />
            </effect>
         </Rectangle>
         
         <!-- Título dinâmico -->
         <Text fx:id="textTitulo" fill="#2c3e50" layoutX="30.0" layoutY="45.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Dashboard">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
         </Text>

         <!-- Conteúdo será injetado aqui -->
      </Pane>
   </children>
</Pane>
