<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="320.0" prefWidth="558.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.loja.amor_de_mamae.controller.CaixaController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label style="-fx-font-weight: bold;" text="Abrir Caixa">
               <font>
                  <Font size="42.0" />
               </font>
            </Label>
            
            <Label text="Saldo Inicial em Caixa:">
               <font>
                  <Font size="20.0" />
               </font></Label>
            <TextField fx:id="inputSaldoInicial" alignment="CENTER" prefHeight="69.0" prefWidth="425.0" promptText="Digite o valor Inicial em caixa">
               <font>
                  <Font size="32.0" />
               </font></TextField>
            
            <Button fx:id="btnAbrirCaixa" mnemonicParsing="false" onAction="#abrirCaixa" prefHeight="44.0" prefWidth="131.0" style="-fx-background-color: #00BFFF; -fx-text-fill: white;" text="ABRIR CAIXA">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
