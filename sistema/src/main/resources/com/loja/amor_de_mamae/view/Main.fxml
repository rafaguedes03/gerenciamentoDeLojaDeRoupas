<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="720.0" prefWidth="1280.0"
            fx:controller="com.loja.amor_de_mamae.controller.MainController">

    <!-- Botões laterais -->
    <left>
        <VBox prefWidth="150.0" spacing="10.0">
            <children>
                <Button fx:id="btn_vendas" text="VENDAS">
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0">
                            <image>
                                <Image url="@../img/money.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btn_cadastrar_produto" text="CADASTRAR PRODUTOS">
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0">
                            <image>
                                <Image url="@../img/camiseta.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btn_cadastrar_cliente" text="CADASTRAR CLIENTES">
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0">
                            <image>
                                <Image url="@../img/user.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btn_visualizar_fiados" text="FIADOS">
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0">
                            <image>
                                <Image url="@../img/eyes.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btn_relatorios" text="RELATÓRIOS">
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0">
                            <image>
                                <Image url="@../img/report.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btn_exit" text="SAIR">
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0">
                            <image>
                                <Image url="@../img/logout.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </left>

    <!-- TabPane central -->
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
               <Tab fx:id="tabVendas" text="VENDAS"/>
               <Tab fx:id="tabProdutos" text="CADASTRAR PRODUTOS"/>
               <Tab fx:id="tabClientes" text="CADASTRAR CLIENTES"/>
               <Tab fx:id="tabFiados" text="FIADOS"/>
               <Tab fx:id="tabRelatorios" text="RELATÓRIOS"/>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
